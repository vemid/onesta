{% spaceless %}
    <!DOCTYPE html>
    <html lang="sr">
        {% include '@layout/title.html.twig' %}
        {% include '@layout/head.html.twig' %}

        <body class="frontend fixed-sidebar mini-navbar pace-done">
        <div id="wrapper">
            <div id="page-wrapper">
                <div id="content">
                    <div class="content">
                        {% block content %}
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="text-center">
                                        <h1 class="logo-name">VEMID</h1>
                                    </div>
                                </div>
                            </div>
                            <div class="middle-box text-center loginscreen animated fadeInDown">
                                {{ flashSession.display(null, true) | raw }}

                                <div>
                                    <h3>Hello!</h3>

                                    {{ form.render('begin') | raw }}
                                    {{ form.render('errors') | raw }}
                                    <div class="form-group">
                                        {{ form['username'].control | raw }}
                                        <div class="help-block m-b-none"></div>
                                    </div>
                                    <div class="form-group">
                                        {{ form['password'].control | raw }}
                                        <div class="help-block m-b-none"></div>
                                    </div>
                                    <div class="form-group">
                                        <a class="pull-right m-b smaller-90 grey-text" href="/auth/reset-password">{{ t('Frogot your password') }}</a>
                                    </div>
                                    {{ form['send'].control | raw }}
                                    {{ form.render('end') | raw }}

                                    <p class="m-t"><small>Vemid software development &copy;
                                            2014-{{ date().format('Y') }}</small></p>
                                </div>
                            </div>
                        {% endblock %}
                    </div>
                </div>
                {% include '@layout/footer.html.twig' %}
            </div>
        </div>
        {% include '@layout/foot-js.html.twig' %}
        </body>
    </html>
{% endspaceless %}