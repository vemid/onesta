{% spaceless %}
    <!DOCTYPE html>
    <html lang="sr">
    {% include '@layout/title.html.twig' %}
    {% include '@layout/head.html.twig' %}

    <body class="frontend fixed-sidebar mini-navbar pace-done">
    <div id="wrapper">
        <div id="page-wrapper">
            <div id="content">
                <div class="content">
                    {% block content %}
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="text-center">
                                    <h1 class="logo-name">VEMID</h1>
                                </div>
                            </div>
                        </div>
                        <div class="middle-box text-center loginscreen animated fadeInDown">
                            {{ flashSession.display(null, true) | raw }}

                            <div>
                                <h3>Hi, {{ user }}!</h3>
                                <div class="alert dismissable alert-warning">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                                aria-hidden="true">Ã—</span></button>
                                    {{ t('If it\'s  not you, please click') }}
                                    <br><a style="text-decoration: underline" class="grey-text" href="/admin/auth/login"><b>{{ t('here') }}</b></a>
                                </div>
                                {{ form.render('begin') | raw }}
                                {{ form.render('errors') | raw }}
                                {{ form['userId'].control | raw }}
                                <div class="form-group">
                                    {{ form['email'].control | raw }}
                                    <div class="help-block m-b-none"></div>
                                </div>
                                <div class="form-group">
                                    {{ form['password'].control | raw }}
                                    <div class="help-block m-b-none"></div>
                                </div>
                                <div class="form-group">
                                    {{ form['rePassword'].control | raw }}
                                    <div class="help-block m-b-none"></div>
                                </div>
                                {{ form['send'].control | raw }}
                                {{ form.render('end') | raw }}

                                <p class="m-t"><small>Vemid software development &copy;
                                        2014-{{ date().format('Y') }}</small></p>
                            </div>
                        </div>
                    {% endblock %}
                </div>
            </div>
            {% include '@layout/footer.html.twig' %}
        </div>
    </div>
    {% include '@layout/foot-js.html.twig' %}
    </body>
    </html>
{% endspaceless %}